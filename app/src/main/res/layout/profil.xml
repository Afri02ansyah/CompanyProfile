<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/smp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbprofil"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/profil" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbekskul"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/fasilitas" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbvisi"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/visi" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/line1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="sejarah"
                        android:background="@drawable/latarbelakang">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="SEJARAH SMPN 01 MATESIH"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="identitas"
                        android:background="@drawable/latarbelakang">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="IDENTITAS SEKOLAH"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="visimisi"
                        android:background="@drawable/latarbelakang">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="VISI DAN MISI" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
