<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66DD6A"
    tools:context=".ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/up" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="sejarah"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbprofil"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/profil" />
                        <TextView
                            android:id="@+id/profil"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_alignLeft="@id/gbprofil"
                            android:layout_alignTop="@id/gbprofil"
                            android:layout_alignRight="@id/gbprofil"
                            android:layout_alignBottom="@id/gbprofil"
                            android:layout_marginTop="115dp"
                            android:gravity="center"
                            android:text="Sejarah Sekolah"
                            android:textColor="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="identitas"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbekskul"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/fasilitas" />
                        <TextView
                            android:id="@+id/ekskul"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_alignLeft="@id/gbekskul"
                            android:layout_alignTop="@id/gbekskul"
                            android:layout_alignRight="@id/gbekskul"
                            android:layout_alignBottom="@id/gbekskul"
                            android:layout_marginTop="115dp"
                            android:gravity="center"
                            android:text="Identitas Sekolah"
                            android:textColor="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="visimisi"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbvisi"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/hadiah" />
                        <TextView
                            android:id="@+id/visimisi"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_alignLeft="@id/gbvisi"
                            android:layout_alignTop="@id/gbvisi"
                            android:layout_alignRight="@id/gbvisi"
                            android:layout_alignBottom="@id/gbvisi"
                            android:layout_marginTop="115dp"
                            android:gravity="center"
                            android:text="Visi dan Misi"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/line1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="programkerja"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbprofil"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/saranaa" />
                        <TextView
                            android:id="@+id/profil"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_alignLeft="@id/gbprofil"
                            android:layout_alignTop="@id/gbprofil"
                            android:layout_alignRight="@id/gbprofil"
                            android:layout_alignBottom="@id/gbprofil"
                            android:layout_marginTop="115dp"
                            android:gravity="center"
                            android:text="Program Kerja"
                            android:textColor="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:onClick="strukturorganisasi"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/gbekskul"
                            android:layout_width="155dp"
                            android:layout_height="150dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:src="@drawable/visi" />
                        <TextView
                            android:id="@+id/ekskul"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_alignLeft="@id/gbekskul"
                            android:layout_alignTop="@id/gbekskul"
                            android:layout_alignRight="@id/gbekskul"
                            android:layout_alignBottom="@id/gbekskul"
                            android:layout_marginTop="115dp"
                            android:gravity="center"
                            android:text="Struktur Organisasi"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
